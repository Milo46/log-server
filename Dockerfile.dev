#=========================================================================
# DEVELOPMENT/DEBUG DOCKERFILE
#=========================================================================

FROM rust:latest

RUN apt-get update && apt-get install -y \
    ca-certificates \
    gdb \
    strace \
    valgrind \
    curl \
    && rm -rf /var/lib/apt/lists/*

RUN cargo install --locked cargo-watch cargo-edit

WORKDIR /app

# Copy manifests and build dependencies first
COPY Cargo.toml ./

# Copy source code
COPY src ./src

# Build dependencies in debug mode
RUN cargo build

EXPOSE 8080

ENV RUST_LOG=debug
ENV RUST_BACKTRACE=1

CMD ["cargo", "watch", "-x", "run"]
